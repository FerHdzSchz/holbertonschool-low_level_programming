.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all:$(OBJ)
	$(CC) $(OBJ) $(CFLAGS) -o $(NAME)

clean:
	$(RM) -f *\~ *.swp $(NAME)

oclean:
	$(RM) -f *.o

fclean:
	$(RM) -f *\~ *.swp *.o $(NAME)

re:
	$(CC) $(SRC) $(CFLAGS) -o $(NAME)